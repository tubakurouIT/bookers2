
	  

  <div class='col-md-3'>
    <h2>User info</h2>

    <table class='table'>
      <tr>
        <%= image_tag user.get_profile_image(100,100)%>
      </tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th> 
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </table>


    <div class='row'>
       
      <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block edit_user_196396"  do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>

    </div>





    <h2 class="mt-3">New book</h2>

    <%= form_with model: book do |f| %>
      <h6>Title</h4>
      <%= f.text_field :title %>

      <h6>Opinion</h4>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>
    <% end %>

  </div>


 