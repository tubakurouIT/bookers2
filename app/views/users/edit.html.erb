<% if @user.errors.any? %>
  <%= @user.errors.count %>件のerrorが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class='col-md-3'>
    <h2>User info</h2>


    <%= form_with model: @user do |f| %>

      <h6>Name</h4>
      <%= f.text_field :name %>

    <h6>image</h6>
    <%= f.file_field :profile_image, accept: "image/*" %>


      <h6>introduction</h4>
      <%= f.text_area :introduction %>
      <br>

      <%= f.submit 'Update User' %>
    <% end %>

  </div>